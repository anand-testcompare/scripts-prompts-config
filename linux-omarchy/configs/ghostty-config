# High contrast colors (matching alacritty)
background = #0a0f0c
foreground = #e8ede9
palette = 0=#0a100b
palette = 1=#e09080
palette = 2=#5ec4a0
palette = 3=#e8d080
palette = 4=#60b0e0
palette = 5=#c090c0
palette = 6=#50d0d0
palette = 7=#e8ede9
palette = 8=#607068
