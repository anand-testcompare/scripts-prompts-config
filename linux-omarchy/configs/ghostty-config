# Font
font-family = "JetBrainsMono Nerd Font"
font-style = Regular
font-size = 9

# Window
window-theme = ghostty
window-decoration = false
window-padding-x = 14
window-padding-y = 14
confirm-close-surface=false
resize-overlay = never
gtk-toolbar-style = flat

# Cursor styling
cursor-style = "block"
cursor-style-blink = false

# Cursor styling + SSH session terminfo
# (all shell integration options must be passed together)
shell-integration-features = ssh-env

# Keyboard bindings
keybind = shift+insert=paste_from_clipboard
keybind = control+insert=copy_to_clipboard
keybind = super+control+shift+alt+arrow_down=resize_split:down,100
keybind = super+control+shift+alt+arrow_up=resize_split:up,100
keybind = super+control+shift+alt+arrow_left=resize_split:left,100
keybind = super+control+shift+alt+arrow_right=resize_split:right,100

# Mac-style keybindings (xremap converts Super+key to Ctrl+key)
keybind = ctrl+a=select_all
keybind = ctrl+c=copy_to_clipboard
keybind = ctrl+v=paste_from_clipboard
keybind = ctrl+d=new_split:right
keybind = ctrl+alt+d=new_split:down
keybind = ctrl+w=close_surface
keybind = ctrl+t=new_tab
keybind = ctrl+n=new_window
keybind = ctrl+left_bracket=previous_tab
keybind = ctrl+right_bracket=next_tab
keybind = ctrl+equal=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+zero=reset_font_size

# Slowdown mouse scrolling
mouse-scroll-multiplier = 0.95
# Shift+Enter for Claude Code newline
keybind = shift+enter=text:\n
