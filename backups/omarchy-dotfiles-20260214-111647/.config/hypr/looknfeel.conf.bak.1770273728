# Change the default Omarchy look'n'feel

# https://wiki.hyprland.org/Configuring/Variables/#cursor
cursor {
    no_hardware_cursors = true
    zoom_rigid = true
}

# https://wiki.hyprland.org/Configuring/Variables/#general
general {
    # No gaps between windows or borders
    gaps_in = 2
    gaps_out = 5
    border_size = 1

    # Use master layout instead of dwindle
    # layout = master
}

# https://wiki.hyprland.org/Configuring/Variables/#decoration
decoration {
    # Use round window corners
    # rounding = 8
}

# https://wiki.hypr.land/Configuring/Dwindle-Layout/
dwindle {
    # Avoid overly wide single-window layouts on wide screens
    # single_window_aspect_ratio = 1 1
}

# Reduce repaint glitches in Dolphin
windowrulev2 = noblur, class:^(org\.kde\.dolphin|dolphin)$
windowrulev2 = noshadow, class:^(org\.kde\.dolphin|dolphin)$
windowrulev2 = noanim, class:^(org\.kde\.dolphin|dolphin)$

# Pastel sage border for scratchpad windows
windowrule = border_color rgb(8aab96) rgb(8aab96), match:workspace special:scratchpad
windowrule = border_size 2, match:workspace special:scratchpad
