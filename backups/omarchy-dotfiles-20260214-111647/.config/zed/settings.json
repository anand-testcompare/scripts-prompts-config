// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "session": {
    "trust_all_worktrees": true
  },
  "autosave": "on_focus_change",
  "prettier": {
    "allowed": false,
  },
  "agent": {
    "default_profile": "yolo",
    "profiles": {
      "yolo": {
        "default_model": {
          "provider": "zed.dev",
          "model": "gemini-3-flash"
        },
        "name": "yolo",
        "tools": {
          "restore_file_from_disk": true,
          "web_search": true,
          "thinking": true,
          "terminal": true,
          "save_file": true,
          "read_file": true,
          "open": true,
          "move_path": true,
          "list_directory": true,
          "now": true,
          "grep": true,
          "find_path": true,
          "fetch": true,
          "edit_file": true,
          "diagnostics": true,
          "delete_path": false,
          "create_directory": true,
          "copy_path": true
        },
        "enable_all_context_servers": false,
        "context_servers": {
          "mcp-server-context7": {
            "tools": {
              "resolve-library-id": true,
              "query-docs": true
            }
          }
        }
      }
    },
    "default_model": {
      "provider": "zed.dev",
      "model": "gemini-3-flash",
    },
    "always_allow_tool_actions": true,
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "gemini-3-flash",
    },
    "model_parameters": [],
  },
  "search": {
    "include_ignored": false,
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/node_modules",
    "**/.pnpm-store",
    "**/.yarn",
    "**/.pnp.*",
    "**/bower_components",
    "**/dist",
    "**/build",
    "**/.next",
    "**/.nuxt",
    "**/.svelte-kit",
    "**/.turbo",
    "**/.parcel-cache",
    "**/.vite",
    "**/.webpack",
    "**/target",
    "**/.cargo/registry",
    "**/.cargo/git",
    "**/.venv",
    "**/venv",
    "**/env",
    "**/__pycache__",
    "**/.pytest_cache",
    "**/.mypy_cache",
    "**/.ruff_cache",
    "**/.tox",
    "**/*.egg-info",
    "**/.gradle",
    "**/.idea",
    "**/.cache"
  ],
  "agent_servers": {
    "claude": {
      "default_mode": "bypassPermissions",
    },
  },
  "lsp": {},
  "project_panel": {
    "hide_hidden": false,
    "hide_gitignore": false,
  },
  "context_servers": {
    "mcp-server-context7": {
      "enabled": true,
      "settings": {},
    },
  },
  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Catppuccin Frapp√©",
  },
  "base_keymap": "Cursor",
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Mocha"
  },
}
