{
	"$schema": "https://opencode.ai/config.json",
	"plugin": ["opencode-gemini-auth@latest", "opencode-anthropic-auth@latest"],
	"model": "anthropic/claude-opus-4-6",
	"small_model": "anthropic/claude-haiku-4-5",
	"mcp": {
		"gh_grep": {
			"type": "remote",
			"url": "https://mcp.grep.app",
			"enabled": true
		}
	},
	"permission": {
		"bash": "allow",
		"read": "allow",
		"edit": "allow",
		"write": "allow",
		"list": "allow",
		"grep": "allow",
		"glob": "allow",
		"webfetch": "allow",
		"websearch": "allow"
	}
}
